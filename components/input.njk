{% macro text(label, id, name, value = "") %}
	<div class="Input Input--text">
		<label for="{{ id }}">
			{{ label }}
		</label>
		<input
			id="{{ id }}"
			name="{{ name }}"
			value="{{ value }}"
		>
	</div>
{% endmacro %}

{% macro checkbox(label, foreground, background, id, name, value) %}
	<div
		class="Input Input--checkbox"
		style="
			--foreground: {{ foreground }};
			--background: {{ background }};
		"
	>
		<input
			type="checkbox"
			id="{{ id }}"
			name="{{ name }}"
			value="{{ value }}"
		>
		<label for="{{ id }}">
			<span>{{ label|safe }}</span>
		</label>
	</div>
{% endmacro %}
